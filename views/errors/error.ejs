<div class="error-container">
  <div class="error-content">
    <h1 class="error-title">Oops! Something went wrong</h1>
    
    <div class="error-icon">
      <svg width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="15" y1="9" x2="9" y2="15"></line>
        <line x1="9" y1="9" x2="15" y2="15"></line>
      </svg>
    </div>
    
    <% if (typeof status !== 'undefined' && status === 404) { %>
      <h2>Page Not Found (404)</h2>
      <p>The page you're looking for doesn't exist or has been moved.</p>
    <% } else if (typeof status !== 'undefined' && status === 500) { %>
      <h2>Server Error (500)</h2>
      <p>We're experiencing technical difficulties. Please try again later.</p>
    <% } else { %>
      <h2>Error</h2>
      <p><%= typeof message !== 'undefined' ? message : 'An unexpected error occurred.' %></p>
    <% } %>
    
    <div class="error-actions">
      <a href="/" class="btn btn-primary">Go Home</a>
      <button onclick="history.back()" class="btn btn-secondary">Go Back</button>
    </div>
  </div>
</div>

<style>
.error-container {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.error-content {
  text-align: center;
  max-width: 500px;
  padding: 40px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.error-title {
  color: #dc3545;
  font-size: 2.5rem;
  margin-bottom: 20px;
}

.error-icon {
  color: #dc3545;
  margin: 20px 0;
}

.error-content h2 {
  color: #333;
  font-size: 1.8rem;
  margin-bottom: 15px;
}

.error-content p {
  color: #666;
  font-size: 1.1rem;
  line-height: 1.6;
  margin-bottom: 30px;
}

.error-actions {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
}

.btn {
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #007bff;
  color: white;
}

.btn-primary:hover {
  background: #0056b3;
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-secondary:hover {
  background: #545b62;
}

@media (max-width: 480px) {
  .error-title {
    font-size: 2rem;
  }
  
  .error-content h2 {
    font-size: 1.5rem;
  }
  
  .error-actions {
    flex-direction: column;
  }
  
  .btn {
    width: 100%;
  }
}
</style>
